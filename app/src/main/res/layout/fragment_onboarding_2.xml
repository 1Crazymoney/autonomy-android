<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_18"
    android:paddingTop="@dimen/dp_14"
    android:paddingEnd="@dimen/dp_18"
    android:paddingBottom="@dimen/dp_14">

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="@dimen/dp_105"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/domaine_sans"
            android:gravity="center"
            android:text="1"
            android:textAllCaps="true"
            android:textColor="@color/concord"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/domaine_sans"
            android:gravity="center"
            android:text="2"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/domaine_sans"
            android:gravity="center"
            android:text="3"
            android:textAllCaps="true"
            android:textColor="@color/concord"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:id="@+id/vToolbar1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:background="@drawable/ic_double_line"
        app:layout_constraintBottom_toBottomOf="@id/layoutTitle"
        app:layout_constraintEnd_toStartOf="@id/layoutTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutTitle"
        tools:visibility="visible" />

    <View
        android:id="@+id/vToolbar2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_3"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/ic_double_line"
        app:layout_constraintBottom_toBottomOf="@id/layoutTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layoutTitle"
        app:layout_constraintTop_toTopOf="@id/layoutTitle"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSlogan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_52"
        android:layout_marginBottom="@dimen/dp_24"
        android:fontFamily="@font/grotesk_light_font_family"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/your_privacy_get_stronger"
        android:textColor="@color/white"
        app:autoSizeMaxTextSize="@dimen/sp_36"
        app:autoSizeMinTextSize="@dimen/sp_18"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/ivPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg_phone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPhoneTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_marginEnd="@dimen/dp_14"
        android:fontFamily="@font/grotesk_light_font_family"
        android:gravity="center"
        android:text="@string/do_u_have_any_symptoms"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="@id/ivPhone"
        app:layout_constraintStart_toStartOf="@id/ivPhone"
        app:layout_constraintTop_toTopOf="@id/ivPhone" />

    <View
        android:id="@+id/vDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_14"
        android:background="@color/concord"
        app:layout_constraintEnd_toEndOf="@id/ivPhone"
        app:layout_constraintStart_toStartOf="@id/ivPhone"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSymptom1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:fontFamily="@font/grotesk_light_font_family"
        android:includeFontPadding="false"
        android:text="@string/fever"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="@id/vDivider"
        app:layout_constraintStart_toEndOf="@id/ivSymptom1"
        app:layout_constraintTop_toTopOf="@id/ivSymptom1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSymptomDes1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/grotesk_light_font_family"
        android:text="@string/body_temp"
        android:textColor="@color/silver_chalice"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@id/tvSymptom1"
        app:layout_constraintStart_toStartOf="@id/tvSymptom1"
        app:layout_constraintTop_toBottomOf="@id/tvSymptom1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSymptom1"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_28"
        app:layout_constraintStart_toStartOf="@id/vDivider"
        app:layout_constraintTop_toBottomOf="@id/vDivider"
        app:srcCompat="@drawable/ic_checked" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSymptom2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:fontFamily="@font/grotesk_light_font_family"
        android:includeFontPadding="false"
        android:text="@string/dry_cough"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="@id/vDivider"
        app:layout_constraintStart_toEndOf="@id/ivSymptom2"
        app:layout_constraintTop_toTopOf="@id/ivSymptom2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSymptomDes2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/grotesk_light_font_family"
        android:text="@string/without_mucous"
        android:textColor="@color/silver_chalice"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@id/tvSymptom2"
        app:layout_constraintStart_toStartOf="@id/tvSymptom2"
        app:layout_constraintTop_toBottomOf="@id/tvSymptom2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSymptom2"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="@id/vDivider"
        app:layout_constraintTop_toBottomOf="@id/tvSymptomDes1"
        app:srcCompat="@drawable/ic_checked" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_black_gradient"
        app:layout_constraintBottom_toBottomOf="@id/layoutBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutBack" />

    <LinearLayout
        android:id="@+id/layoutBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            app:srcCompat="@drawable/ic_back_stateful" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:fontFamily="@font/domaine_sans"
            android:text="@string/back"
            android:textAllCaps="true"
            android:textColor="@color/color_white_stateful"
            android:textSize="@dimen/sp_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/domaine_sans"
            android:text="@string/next"
            android:textAllCaps="true"
            android:textColor="@color/color_white_stateful"
            android:textSize="@dimen/sp_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_12"
            app:srcCompat="@drawable/ic_next_stateful" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>