<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.bitmark.autonomy.util.view.pagerindicator.IconPageIndicator
        android:id="@+id/vIndicator"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_52"
        app:icon_margin="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@id/ivMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivMenu"
        app:layout_constraintTop_toTopOf="@id/ivMenu" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vIndicator" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMenu"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:paddingStart="@dimen/dp_14"
        android:paddingTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_stateful" />


</androidx.constraintlayout.widget.ConstraintLayout>